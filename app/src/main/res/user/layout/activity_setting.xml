<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

   <include
       android:id="@+id/title"
       layout="@layout/title_bar"/>

    <ScrollView
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_aboutus"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_editdata_pwd"
                android:textColor="#F888"
                android:textSize="16sp"
                android:text="关于我们"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/shape_login_name_pwd_line1" />
            <TextView
                android:id="@+id/tv_third_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_editdata_pwd"
                android:textColor="#F888"
                android:textSize="16sp"
                android:text="第三方账号"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/shape_login_name_pwd_line1" />
            <TextView
                android:id="@+id/tv_user_agreement"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_editdata_pwd"
                android:textColor="#F888"
                android:textSize="16sp"
                android:text="用户协议"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/shape_login_name_pwd_line1" />
            <TextView
                android:id="@+id/tv_usermore_feedback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_editdata_pwd"
                android:textColor="#F888"
                android:textSize="16sp"
                android:text="意见反馈"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/shape_login_name_pwd_line1" />
            <TextView
                android:id="@+id/tv_usermore_version"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_editdata_pwd"
                android:textColor="#F888"
                android:textSize="16sp"
                android:text="当前版本"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/shape_login_name_pwd_line1" />
            <RelativeLayout
                android:id="@+id/rl_usermore_clear"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_usermore_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#F888"
                    android:textSize="16sp"
                    android:text="清除缓存"/>

                <ImageButton
                    android:id="@+id/iv_usermore_clear"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_editdata_pwd"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:id="@+id/tv_usermore_clear_size"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv_usermore_clear"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textColor="#F888"
                    android:textSize="16sp"
                    android:text="6.00M"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/shape_login_name_pwd_line1" />
            <LinearLayout
                android:id="@+id/ll_usermore_out"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_usermore_out"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_editdata_pwd"
                    android:textColor="#F888"
                    android:textSize="16sp"
                    android:text="退出登陆"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/shape_login_name_pwd_line1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>