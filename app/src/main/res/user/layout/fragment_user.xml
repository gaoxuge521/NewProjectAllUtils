<?xml version="1.0" encoding="utf-8"?>
<com.gxg.alltils.projectallutils.widght.ZoomInScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/ivBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/my_page_background" />

            <LinearLayout
                android:id="@+id/layout_user_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_my_avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.0dip"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/layout_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Wey Ye"
                            android:textColor="@color/white"
                            android:textSize="16.0sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_count"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23.0dip"
                    android:layout_marginTop="18.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_following"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_following_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="16.0sp" />

                        <TextView
                            android:id="@+id/txt_following_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:text="关注"
                            android:textColor="@color/white"
                            android:textSize="12.0sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v_user_info_divider_one"
                        android:layout_width="1dip"
                        android:layout_height="38.0dip"
                        android:background="@color/white" />

                    <LinearLayout
                        android:id="@+id/layout_followers"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_followers_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="1.1w"
                            android:textColor="@color/white"
                            android:textSize="16.0sp" />

                        <TextView
                            android:id="@+id/txt_followers_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:text="粉丝"
                            android:textColor="@color/white"
                            android:textSize="12.0sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v_user_info_divider_two"
                        android:layout_width="1dip"
                        android:layout_height="38.0dip"
                        android:background="@color/white" />

                    <LinearLayout
                        android:id="@+id/layout_recent_visitors"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_recent_visitors_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="10w"
                            android:textColor="@color/white"
                            android:textSize="16.0sp" />

                        <TextView
                            android:id="@+id/txt_recent_visitors_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:text="7日访客"
                            android:textColor="@color/white"
                            android:textSize="12.0sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_register"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_above="@+id/tv_register"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="24.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/log_in_register" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:paddingBottom="28.0dip"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />


            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/tool_bar_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:id="@+id/ll_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_page_favorite_selector"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:text="收藏"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_night_mode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_page_nightmode_selector"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:text="夜间"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/my_page_settings_selector"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:text="设置"
                        />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/foodseptalsparent"
                android:layout_height="15dp"/>

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/msg"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="消息通知"/>

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/lixian"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="离线"/>

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/huodong"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="活动"/>


            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/shop"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="商城"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/msg"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="消息通知"/>

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/lixian"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="离线"/>

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/huodong"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="活动"/>


            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/shop"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="商城"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/msg"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="消息通知"/>

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/lixian"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="离线"/>

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/huodong"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="活动"/>


            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/shop"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/to_right2"
                android:text="商城"/>
        </LinearLayout>



    </LinearLayout>

</com.gxg.alltils.projectallutils.widght.ZoomInScrollView>