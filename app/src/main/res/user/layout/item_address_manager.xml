<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_toLeftOf="@id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            tools:text="高续铬"/>

        <TextView
            android:maxLength="12"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_phone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="15735804834"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_address_info"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/textColor"
        tools:text="北京 北京市 东城区 天通中苑 23号楼 5 单元 606"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_centerVertical="true"
            android:id="@+id/cx_defaule_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:button="@drawable/cx_address_select"
            android:checked="true"
            android:textSize="13sp"
            android:text="  默认地址"/>


        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_delete"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:drawableLeft="@drawable/icon_delete"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"/>

        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:drawableLeft="@drawable/icon_edit"
            android:layout_toLeftOf="@id/tv_delete"
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"/>
    </RelativeLayout>

</LinearLayout>