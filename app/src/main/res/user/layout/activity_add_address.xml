<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_all"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收 货 人 ："
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_receiver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:hint="请输入收货人姓名"
              android:singleLine="true"
                android:text=""
                android:textColor="@color/textColor"
                android:textColorHint="@color/tv_color"
                android:textSize="14sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="80dp"
            android:background="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系手机："
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <EditText
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:id="@+id/et_receiver_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="1234567890"
                android:hint="请输入收货人手机号码"
                android:inputType="phone"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/textColor"
                android:textColorHint="@color/tv_color"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="80dp"
            android:background="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区选择："
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_select_address"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请选择地区"
                android:lines="1"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="80dp"
            android:background="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址："
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <EditText
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:id="@+id/et_receiver_detailed_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入详细地址"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/textColor"
                android:textColorHint="@color/tv_color"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="80dp"
            android:background="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认地址："
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cx_defaule_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:button="@drawable/cx_address_select"
                android:checked="true" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_save_address"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="保存地址"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_shape"
        android:layout_marginBottom="30dp"/>
</LinearLayout>