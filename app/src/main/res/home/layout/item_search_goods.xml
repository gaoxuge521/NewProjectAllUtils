<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/white">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_search_good_item"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_height="100dp"
        android:src="@color/b5b5b5"/>
    <!--商店信息-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_good_store"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@id/iv_search_good_item"
        android:background="@color/e9e9e9"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            tools:text="双立人官方旗舰店"
            android:drawableRight="@drawable/to_right2"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/fenge_d5"/>
        <LinearLayout
            android:id="@+id/ll_store_credit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="11sp"
                    android:text="描述相符："/>
                <TextView
                    android:id="@+id/tv_store_desccredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textColor="@color/red"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="11sp"
                    android:text="服务相符："/>
                <TextView
                    android:id="@+id/tv_store_servicecredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textColor="@color/red"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="11sp"
                    android:text="发货速度："/>
                <TextView
                    android:id="@+id/tv_store_deliverycredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textColor="@color/red"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@color/red"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <!--商品信息-->
    <LinearLayout
        android:id="@+id/ll_goods"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@id/iv_search_good_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/tv_search_good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            tools:text="德国双立人Twin Gourmet锅具3件套装 28cm中式炒锅蒸笼深烧锅厨具 不锈钢色"/>
        <TextView

            android:id="@+id/tv_search_good_jingle"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="双立人旗下中式锅具旗舰产品"
            android:textSize="10sp"
            android:textColor="@color/tv_color"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_search_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="￥3571"
                android:textColor="@color/red"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_search_good_selasnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="销量：0"
                tools:textSize="10sp"
                android:textColor="@color/textColor"/>
            <TextView
                android:id="@+id/tv_search_good_store_name"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/textColor"
                android:layout_height="wrap_content"
                tools:text="双立人官方旗舰店···"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/b5b5b5"
            />
    </LinearLayout>
</RelativeLayout>