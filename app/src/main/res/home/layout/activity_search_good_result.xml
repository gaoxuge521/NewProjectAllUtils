<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_all"
    android:orientation="vertical"
    tools:context="com.gxg.alltils.projectallutils.model.home.activity.SearchGoodResultActivity">

    <include
        layout="@layout/title_bar"/>
   <LinearLayout
       android:background="@color/white"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/tv_sorting"
           android:gravity="center"
           android:layout_weight="1"
           android:padding="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="综合排序"
           android:textSize="14sp"
           android:drawableRight="@drawable/jiantou_xia"
           android:drawablePadding="3dp"
           android:textColor="@color/black"/>
       <TextView
           android:id="@+id/tv_sales"
           android:gravity="center"
           android:layout_weight="1"
           android:padding="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="销量优先"
           android:textSize="14sp"
           android:textColor="@color/black"/>
       <TextView
           android:id="@+id/tv_filter"
           android:gravity="center"
           android:layout_weight="1"
           android:padding="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="筛选  "
           android:textSize="14sp"
           android:drawableRight="@drawable/jiantou_xia"
           android:drawablePadding="3dp"
           android:textColor="@color/black"/>
       <ImageView
           android:paddingBottom="10dp"
           android:paddingTop="10dp"
           android:paddingRight="15dp"
           android:id="@+id/iv_more"
           android:layout_gravity="center_vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/more1"
           />
   </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
