<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="10">

    <RelativeLayout
        android:id="@+id/rl_header_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:src="@drawable/scan2code_header_right" />

        <TextView
            android:id="@+id/tv_scan"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_scan"
            android:layout_centerHorizontal="true"
            android:text="扫一扫" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="@drawable/search_frame"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/search_glass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/iv_search"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:hint="搜索您想要的"
            android:textColor="#C2B7BB"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:padding="3dp"
                android:src="@drawable/news2" />

            <ImageView
                android:id="@+id/red_poit"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/red_point_home"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_type"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top"
            android:layout_centerHorizontal="true"
            android:text="消息" />
    </RelativeLayout>

</LinearLayout>